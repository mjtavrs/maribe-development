{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PHP Server (127.0.0.1:8000)",
            "type": "php",
            "request": "launch",
            "runtimeExecutable": "php",
            "runtimeArgs": [
                "-S",
                "127.0.0.1:8000",
                "router.php"
            ],
            "cwd": "${workspaceFolder}",
            "port": 8000,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Development Server \\(http://127.0.0.1:([0-9]+)\\) started",
                "uriFormat": "http://127.0.0.1:%s"
            }
        }
    ]
}

