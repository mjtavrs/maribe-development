{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Iniciar Servidor PHP",
            "type": "shell",
            "command": "php -S 127.0.0.1:8000 router.php",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Development Server.*started",
                    "endsPattern": ".*"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}

